{% extends 'common/base/modal_layout.html.twig' %}
{% block modal_title %}Détails{% endblock %}
{% block modal_body %}
    <div class="row">
        <div class="col-md-12">
            <table class="table table-striped table-borderless table-sm">
                <tbody>
                <tr>
                    <th>ID:</th>
                    <td class="text-right">{{user.id}}</td>
                </tr>
                <tr>
                    <th>Nom:</th>
                    <td class="text-right">{{ user.title|capitalize }}. {{ user.name|capitalize }} {{ user.surname|upper }}</td>
                </tr>
                <tr>
                    <th>Date de naissance:</th>
                    <td class="text-right">{{user.dateOfBirth|date('d/m/Y')}}</td>
                </tr>
                <tr>
                    <th>Email:</th>
                    <td class="text-right">{{user.email|lower}}</td>
                </tr>
                <tr>
                    <th>Téléphone:</th>
                    <td class="text-right">{{user.phone}}</td>
                </tr>
                <tr>
                    <th>Adresse:</th>
                    <td class="text-right">
                        {{user.address.line1}}<br>
                        {% if user.address.line2 %}
                            {{user.address.line2}}<br>
                        {% endif %}
                        {% if user.address.line3 %}
                            {{user.address.line3}}<br>
                        {% endif %}
                        {{user.address.postalCode}} {{user.address.city}}<br>
                        {{user.address.country}}
                    </td>
                </tr>
                <tr>
                    <th>Création du compte:</th>
                    <td class="text-right">{{user.createdAt|date('d/m/Y H:i')}}</td>
                </tr>
                <tr>
                    <th>État du compte:</th>
                    <td class="text-right">{{user.status|upper}}</td>
                </tr>
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}
{% block modal_footer %}
<button class="btn btn-default" data-dismiss="modal">Fermer</button>

{% endblock %}